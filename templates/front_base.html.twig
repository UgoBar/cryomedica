<!DOCTYPE html>
<html class="scrollbar-hidden" lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{{ title }}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
        {% block stylesheets %}
            <link href="{{ asset('css/style.css') }}" rel="stylesheet" />
            <style>
                @font-face {
                    font-family: 'icomoon';
                    src:  url('{{ asset("fonts/icomoon.eot?jnbm3x") }}');
                    src:  url('{{ asset("fonts/icomoon.eot?jnbm3x#iefix") }}') format('embedded-opentype'),
                    url('{{ asset("fonts/icomoon.ttf?jnbm3x") }}') format('truetype'),
                    url('{{ asset("fonts/icomoon.woff?jnbm3x") }}') format('woff'),
                    url('{{ asset("fonts/icomoon.svg?jnbm3x#icomoon") }}') format('svg');
                    font-weight: normal;
                    font-style: normal;
                    font-display: block;
                }

                [class^="icon-"], [class*=" icon-"] {
                    /* use !important to prevent issues with browser extensions that change fonts */
                    font-family: 'icomoon' !important;
                    speak: never;
                    font-style: normal;
                    font-weight: normal;
                    font-variant: normal;
                    text-transform: none;
                    line-height: 1;

                    /* Better Font Rendering =========== */
                    -webkit-font-smoothing: antialiased;
                    -moz-osx-font-smoothing: grayscale;
                }

                .icon-pin:before {
                    content: "\e90d";
                }
                .icon-maintenance:before {
                    content: "\e90e";
                }
                .icon-sixtie:before {
                    content: "\e90f";
                }
                .icon-small:before {
                    content: "\e905";
                }
                .icon-azote:before {
                    content: "\e900";
                }
                .icon-cabine-cryo:before {
                    content: "\e901";
                }
                .icon-cold:before {
                    content: "\e902";
                }
                .icon-europe:before {
                    content: "\e903";
                }
                .icon-france:before {
                    content: "\e904";
                }
                .icon-arrow-left:before {
                    content: "\e906";
                }
                .icon-arrow-right:before {
                    content: "\e907";
                }
                .icon-cross:before {
                    content: "\e908";
                }
                .icon-facebook:before {
                    content: "\e909";
                }
                .icon-insta:before {
                    content: "\e90a";
                }
                .icon-twitter:before {
                    content: "\e90b";
                }
                .icon-zoomin:before {
                    content: "\e90c";
                }


            </style>
        {% endblock %}
    </head>
    <body class="scrollbar-hidden">

        <header>
            <nav class="nav-logo">
                <a href="/" class="text-center fw-bold">
                    <img src="{{ asset("img/logo_cryomedica.png") }}" alt="Logo Cryomedica">
                </a>
            </nav>
            <nav class="nav-items">
                <a href="/centres" class="nav-item {{ app.request.get('_route') == 'centers' ? 'current' : '' }}">Centres</a>
                <a href="/clients" class="nav-item {{ app.request.get('_route') == 'customers' ? 'current' : '' }}">Clients</a>
                <a href="/cabines" class="nav-item {{ app.request.get('_route') == 'cabins' ? 'current' : ''}}">Cabines</a>
                <a href="/historique" class="nav-item {{ app.request.get('_route') == 'historic' ? 'current' : ''}}">Historique</a>
                <a href="/about" class="nav-item {{ app.request.get('_route') == 'about' ? 'current' : ''}}">A propos</a>
            </nav>

            <div class="menu-toggle">
                <div class="hamburger">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
                <div class="cross">
                    <span></span>
                    <span></span>
                </div>
            </div>
        </header>

        <div class="mobile-header">
            <nav class="mobile-nav-items">
                <div class="nav-wrapper">
                    <a href="/centres" class="mobile-nav-item {{ app.request.get('_route') == 'centers' ? 'current' : '' }}">Centres</a>
                </div>
                <div class="nav-wrapper">
                    <a href="/clients" class="mobile-nav-item {{ app.request.get('_route') == 'customers' ? 'current' : '' }}">Clients</a>
                </div>
                <div class="nav-wrapper">
                    <a href="/cabines" class="mobile-nav-item {{ app.request.get('_route') == 'cabines' ? 'current' : ''}}">Cabines</a>
                </div>
                <div class="nav-wrapper">
                    <a href="/historique" class="mobile-nav-item {{ app.request.get('_route') == 'historic' ? 'current' : ''}}">Historique</a>
                </div>
                <div class="nav-wrapper">
                    <a href="/about" class="mobile-nav-item {{ app.request.get('_route') == 'about' ? 'current' : ''}}">A propos</a>
                </div>

            </nav>

            <section class="gallery">
                <figure class="img-wrapper">
                    <img src="{{ asset('img/photo-1-1.jpg') }}" alt="">
                </figure>
                <figure class="img-wrapper">
                    <img src="{{ asset('img/photo2.jpg') }}" alt="">
                </figure>
                <figure class="img-wrapper">
                    <img src="{{ asset('img/photo3.jpg') }}" alt="">
                </figure>
            </section>
        </div>

        <main>
            {% block body %}{% endblock %}
        </main>

{#        <div class="border-radient"></div>#}

        <footer>
            <div class="">
                <p><b>SARL Adrénalines Investissements</b></p>
                <p>RCS Nanterre 421 376 682</p>
                <p>TVA intracommunautaire FR62421376682</p>
            </div>
            <div class="footer-center">
                <p class="bodoni">© <span class="pink">Cryo</span>medica</p>
            </div>
            <div>
                <h4>Patrick Favre</h4>
                <address>
                    <p>1 rue Gustave Courbet</p>
                    <p>92000 Nanterre</p>
                </address>
            </div>
        </footer>

        {% block javascripts %}
            <script src="{{ asset('js/script.js') }}"></script>
        {% endblock %}

    </body>
</html>
